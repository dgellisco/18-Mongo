{{> navbar-saved}}

<div class="jumbotron text-center page-header" id="jumbotron">
    <h3 class="page-header-text">Saved Events</h3>
</div>

<div class="container clearfix" id="container">
    <div class="row">
        <div class="col-sm-12" id="event-section">
            {{> events-saved }}    
        </div>
    </div>
</div>

<!-- Save Event Modal -->
<div class="modal fade" id="saveEventModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="modal-message">
            Event Saved!
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn saveEventCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<!-- Notes Modal -->
<div class="modal fade" id="notesModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"></h4>
                <button type="button" class="close notesCloseBtn" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" class="form-control" id="titleinput" name="title" placeholder="Title">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" id="bodyinput" placeholder="Note Text"></textarea>
                </div>
                <button type="button" class="btn btn-success saveNoteBtn">Save Note</button>
                <hr>
                <div class="noteArea">
                    <!-- Saved Notes appended here -->
                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn notesCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<!-- Warning Modal -->
<div class="modal fade" id="warningModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="modal-message">
                <h2 class="warning">WARNING!</h2>
                <p>Selecting "CLEAR!" will delete all your scraped & saved events, and your notes!</p>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="destroy-btn" data-dismiss="modal">CLEAR!</button>
                <button type="button" class="btn scrapeCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<!-- Return Event Modal -->
<div class="modal fade" id="returnEventModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal body -->
            <div class="modal-body" id="modal-message">
            Event Returned!
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn returnEventCloseBtn" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>